#edit-conference-modal.modal.hide.fade
  .content
    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
    h3 Create a new conference
    form
      label(for='conference-create-name')
        strong Conference name
      input#conference-create-name.input-xxlarge(placeholder='Conference on Computing', type='text', value)
      .dates
        .date
          label(for='conference-date-from')
            strong From
          input#conference-date-from(type='date', name='from')
        .date
          label(for='conference-date-to')
            strong To
          input#conference-date-to(type='date')
      label(for='conference-create-description', name='to')
        strong Description
        |  (optional)
      textarea#conference-create-description
      .controls
        label.radio(for='conference-create-privacy-public')
          input#conference-create-privacy-public(type='radio', name='conference-sharing', value='public', checked='checked')
          strong Public
          br
          | Anyone can submit papers
        label.radio(for='conference-create-privacy-private')
          input#conference-create-privacy-private(type='radio', name='conference-sharing', value='private', checked='checked')
          strong Private
          i.icon.icon-lock
          br
          | Only invited can submit
      .actions
        input.btn.btn-primary(type='submit', value='Create conference')
        input.btn(type='reset', value='Cancel')
