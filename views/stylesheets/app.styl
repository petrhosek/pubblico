/* app css stylesheet */

body {
  background: url(../../img/base-noise.jpeg) #f1f2f3;
  color: #333333;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.4em;
  padding-bottom: 20px;
}

.topbar {
  background: url(../../img/header-bg.png) repeat-x white;
  color: #343434;
  height: 55px;
  position: relative;
  z-index: 1;
  font-size: 13px;
  border-bottom: 1px solid rgba(0,0,0,0.15);
  box-shadow: 0 1px 0 #eee inset;
}

.topbar .brand {
  float: left;
  width: 140px;
  height: 40px;
  background: url(../img/pubblico.png) 0 10px no-repeat;
  text-indent: -9999cm;
  margin-top: 3px;
  background-size: 120px;
}

.topbar .brand a {
  width: 140px;
  height: 40px;
  margin: 0;
  padding: 0;
  opacity: 1;
  display: block;
}

#notifications {
  position: relative;
  float: left;
}

#notifications .notifications-link {
  width: 24px;
  height: 24px;
  background: #eee;
  display: block;
  position: absolute;
  top: 13px;
  left: 3px;
  border-radius: 2px;
  border: 1px solid #ccc;
  background: url(../../img/icon-notifications.png) center -20px no-repeat white;
  box-shadow: 0 1px 0 #eee;
}

.topbar a {
  color: #777;
  font-weight: bold;
  text-shadow: 0 1px 0 white;
}

.topbar .nav {
  float: right;
  margin: 0;
  height: 55px;

  > li {
    display: inline-block;
    line-height: 24px;
    vertical-align: middle;
    margin-left: 20px;
    height: 24px;
    padding: 16px 0;

    > a {
      font-weight: normal;

      &:hover {
        background-color: #fff;
        color: #111;
      }
    }
  }

  .nav-conferences a {
    color: #444;
    font-weight: bold;
  }
}

.topbar .avatar {
  margin-top: -6px;
  width: 32px;
  height: 32px;
  margin-right: 10px;
  border-radius: 32px;
}

.topbar .nav .dropdown {
  padding: 15px;
  -webkit-transition: .15s border-color linear;
  -moz-transition: .15s border-color linear;
  border-left: 1px solid transparent;
  border-right: 1px solid transparent;
  background: transparent;
  max-width: 180px;
}

.topbar .nav a.dropdown-toggle {
  padding: 0;
  background: transparent;
}

.topbar #search-form {
  margin: 0;
  float: left;
  padding: 10px 0 10px 130px;
}

.topbar form input#search {
  background: #fff;
  color: #777;
  font-size: 13px;
  width: 300px;
  padding: 5px 10px;
  box-shadow: 0 1px 0 white;
}

#body {
  margin-top: 20px;
}

#sidebar {
  margin-right: -30px;
  padding-top: 20px;

  #conferences {
    font-weight: 600;
    font-size: 14px;
    height: 100%;
    overflow: auto;
    padding: 0 0 10px 0;
    top: 0;
    /*width: 238px;*/
    -webkit-transition: background .15s linear;

    li a {
      color: #666;
      font-weight: normal;
      padding: 4px 20px 4px 10px;
      text-shadow: 0 1px 0 white;
      margin: 2px 0 2px 0;
      height: 18px;
      display: block;
      font-size: 13px;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      font-weight: bold;

      &:hover {
        color: #333;
        text-decoration: none;
      }
    }

    #conferences-global {
      border-top: 1px solid #ddd;
      box-shadow: 0 1px 0 white inset;
      margin-top: 5px;
      padding: 5px 0;
    }

    #conferences-user {
      border-top: 1px solid #ddd;
      box-shadow: 0 1px 0 white inset;
      margin-top: 5px;
      padding: 5px 0;
    }

    #new-conference {
      margin-top: 5px;

      .new-conference {
        background: rgba(0,0,0,0.05);
        border-radius: 5px;
        padding: 5px 10px;
        color: #555;
        font-size: 12px;
        text-shadow: 0 1px 0 white;
      }
    }
  }
}

