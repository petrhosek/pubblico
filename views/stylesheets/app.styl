.content {
  background: #ffffff;
  border-radius: 2px;
  box-shadow: 0 1px 2px #ccc;
  min-height: 400px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -o-border-radius: 2px;
}

#conference-info {
  padding: 15px 30px 0;
  color: #666;

  h3 {
    color: #2e3c3f;
    float: left;
    line-height: 1.3;
    margin-bottom: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .conference-actions {
    float: right;
  }

  .conference-description {
    clear: both;
  }
}

#conference #conference-container {
  position: relative;
  min-height: 420px;
}

#submission-list {
  background: #fff;
  border-top: 1px solid #dedede;
  display: block;
  font-size: 1.15em;
  margin: 0;
  margin-top: 10px;
  padding: 0;
  position: relative;

  li.submission {
    font-size: 14px;
    padding: 18px 30px;
    position: relative;
    border-bottom: 1px solid #e8eaed;

    .submission-number {
      color: #888;
      width: 35px;
    }

    .submission-content {
      color: #444;
      margin-left: 35px;
      min-height: 30px;
      position: relative;

      h3 {
        display: block;
        font-size: 16px;
        line-height: 1.3;
        margin: 0;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 600px;
        white-space: nowrap;

        a {
          color: #222;
          font-weight: bold;
        }
        .tag {
          margin: 0 2px;
        }
      }

      p {
        color: #888;
        font-size: 14px;
        font-weight: 300;

        a {
          color: #333;
          font-weight: 200;
        }

        .avatar {
          border-radius: 14px;
          height: 14px;
          margin-top: 0px;
          width: 14px;
        }
      }

    }

    .meta {
      position: absolute;
      right: 0px;
      bottom: 0px;
      font-size: 12px;
      color: #666;
      font-weight: normal;

      a {
        color: #444;
        font-weight: normal;
      }
    }
  }
}

